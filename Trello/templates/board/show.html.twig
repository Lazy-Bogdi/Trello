{% extends 'base.html.twig' %}

{% block title %}Board{% endblock %}


{% block stylesheets %}
<link href="{{ asset('boards/css/board.css') }}" rel="stylesheet" />

{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h1 class="mt-4 mb-4">Board</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <a class="btn btn-secondary mt-4" href="{{ path('app_board_index') }}">Back to list</a>
                {% if board.ownerid.id == userId %}
                    <a class="btn btn-primary mt-4" href="{{ path('app_board_edit', {'id': board.id}) }}">Edit</a>
                    {{ include('board/_delete_form.html.twig') }}
                {% endif %}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="taskList-container">
                    {% for taskList in taskLists %}
                        <div class="taskList-card">
                            <h3>{{ taskList.tasklistname }}</h3>
                        </div>
                    {% else %}
                        <p>No Tasklists</p>
                    {% endfor %}
                    {{ form_start(formNewTaskList) }}
                        {{ form_widget(formNewTaskList) }}
                        <button class="btn btn-success">{{ button_label|default('New') }}</button>
                    {{ form_end(formNewTaskList) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}