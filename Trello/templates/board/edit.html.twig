{% extends 'base.html.twig' %}

{% block title %}Edit your board{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h1 class="mt-4 mb-4">Edit Board</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                {{ include('board/_form.html.twig', {'button_label': 'Update'}) }}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <a class="btn btn-secondary mt-4" href="{{ path('app_board_show',{'id': board.id}) }}">Back to your board "{{ board.boardname }}"</a>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                {{ include('board/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
